---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';

const projects = [
  {
    title: 'Verity Nature / MRV Digital Solutions',
    description: 'Design and develop a one-stop MRV system focused on the ESG market.',
    image: '/assets/verity-nature-preview.jpg',
    href: '/projects/verity-nature',
  },
  {
    title: "Boulder Box Saigon - Vietnam's First Boutique Bouldering Concept",
    description: 'Designed, built, and (virtually) manage a top-rated bouldering gym in Saigon, Vietnam.',
    image: '/assets/boulder-box-preview.jpg',
    href: '/projects/boulder-box-saigon',
  },
  {
    title: 'MBFS / After-sale Digital Solution SEA - Part 1',
    description: 'Led the UX/UI Research & Design for Southeast Asian Countries',
    image: '/assets/mbfs-preview.jpg',
    href: '/projects/mbfs-sea',
  },
];
---

<Layout title="Olivia Nguyen - Latest Projects">
  <Header />
  <main class="pt-24 px-4">
    <section class="min-h-screen py-24 max-w-7xl mx-auto">
      <div class="max-w-4xl mx-auto mb-16">
        <h1 class="text-h1 mb-4">Latest Projects</h1>
        <p class="text-body text-white/60">A collection of recent work spanning product design, development, and business ventures.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 max-w-6xl mx-auto">
        {projects.map((project) => (
          <a
            href={project.href}
            class="project-card group relative overflow-hidden rounded-2xl aspect-[3/2] transition-transform duration-300 hover:scale-[1.02]"
          >
            <div class="project-image absolute inset-0 overflow-hidden">
              <div class="absolute inset-0 bg-gray-800 transition-transform duration-500 group-hover:scale-110">
                {/* Placeholder for project images */}
                <div class="w-full h-full flex items-center justify-center text-white/20 text-4xl font-bold">
                  {project.title.substring(0, 2).toUpperCase()}
                </div>
              </div>
            </div>
            
            <div class="project-overlay absolute inset-0 bg-gradient-to-t from-black via-black/50 to-transparent opacity-100"></div>
            
            <div class="project-content relative z-10 flex flex-col justify-end h-full p-6">
              <h2 class="text-body font-bold text-white mb-2">
                {project.title}
              </h2>
              <p class="text-sm text-white/90 leading-relaxed">
                {project.description}
              </p>
            </div>

            <div class="project-icon absolute top-4 right-4 z-20 w-7 h-7 opacity-100 transition-all duration-300 group-hover:top-2 group-hover:right-2">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 256 256"
                fill="currentColor"
                class="w-full h-full text-white"
              >
                <path d="M200,64V168a8,8,0,0,1-16,0V83.31L69.66,197.66a8,8,0,0,1-11.32-11.32L172.69,72H88a8,8,0,0,1,0-16H192A8,8,0,0,1,200,64Z" />
              </svg>
            </div>
          </a>
        ))}
      </div>
    </section>
  </main>
</Layout>

<style>
  .project-card {
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .project-card:hover .project-overlay {
    background: linear-gradient(to top, rgb(0, 0, 0) 19%, rgba(0, 0, 0, 0) 100%);
  }

  @media (max-width: 768px) {
    .grid {
      grid-template-columns: 1fr;
    }
  }
</style>
