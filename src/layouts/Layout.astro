---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Portfolio' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Albert+Sans:ital,wght@0,400;0,600;0,700;0,900;1,400;1,600;1,700;1,900&family=Inter:ital,wght@0,400;0,700;0,900;1,400;1,700;1,900&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body class="bg-black text-white font-body overflow-x-hidden">
    <slot />
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }
  
  body {
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: 'Albert Sans', sans-serif;
  }

  /* Typography presets matching Framer */
  .text-h1 {
    font-size: 120px;
    line-height: 1;
    font-weight: 700;
    font-family: 'Albert Sans', sans-serif;
  }

  .text-h2 {
    font-size: 56px;
    line-height: 1.2;
    font-weight: 700;
    font-family: 'Albert Sans', sans-serif;
  }

  .text-body {
    font-size: 20px;
    line-height: 1.5;
    font-weight: 400;
    font-family: 'Inter', sans-serif;
  }

  .text-nav {
    font-size: 16px;
    line-height: 1.4;
    font-weight: 400;
    font-family: 'Albert Sans', sans-serif;
  }

  /* Responsive typography */
  @media (max-width: 1200px) {
    .text-h1 {
      font-size: 80px;
    }
    .text-h2 {
      font-size: 48px;
    }
    .text-body {
      font-size: 18px;
    }
  }

  @media (max-width: 810px) {
    .text-h1 {
      font-size: 60px;
    }
    .text-h2 {
      font-size: 42px;
    }
    .text-body {
      font-size: 18px;
    }
    .text-nav {
      font-size: 14px;
    }
  }

  @media (max-width: 375px) {
    .text-h1 {
      font-size: 42px;
    }
    .text-h2 {
      font-size: 36px;
    }
    .text-body {
      font-size: 16px;
    }
  }
</style>
