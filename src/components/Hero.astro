---
const { name = 'Olivia Nguyen', contact = 'contact@olivianguyen.rocks' } = Astro.props;
---
<section id="hero" class="hero">
  <div class="hero-inner">
    <h1>{name}</h1>
    <p class="role">Product Design Leader</p>
    <p class="contact">{contact}</p>
  </div>
</section>

<style>
.hero{min-height:60vh;display:flex;align-items:center;justify-content:center;background:#000;color:#fff;padding:48px}
.hero-inner{max-width:980px;text-align:center}
.hero h1{font-size: clamp(28px, 6vw, 56px);margin:0 0 8px}
.role{color:#ffb800;margin:0 0 12px;font-weight:700}
.contact{opacity:0.9}
</style>
