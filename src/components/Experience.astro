---
// Simple experience list component — will be expanded when we port full content
const experiences = [
  {
    role: 'Product Manager',
    org: 'Verity Nature',
    period: '2023 — Present',
    desc: 'Built product roadmaps and MRV-focused tooling.'
  },
  {
    role: 'Design Lead',
    org: 'Previous Company',
    period: '2019 — 2022',
    desc: 'Led design for cross-platform consumer products.'
  }
];
---

<div class="experience-list">
  {experiences.map(item => (
    <article class="experience-item">
      <h3>{item.role} — {item.org}</h3>
      <div class="meta">{item.period}</div>
      <p>{item.desc}</p>
    </article>
  ))}
</div>

<style>
.experience-list{display:flex;flex-direction:column;gap:20px}
.experience-item h3{margin:0;font-size:1.05rem}
.experience-item .meta{color:#bbb;font-size:.9rem;margin-top:6px}
.experience-item p{margin-top:8px}
</style>
